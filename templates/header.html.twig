        <li class="nav-item">
          <a class="nav-link" href="{{ path('logout') }}">ログアウト</a>
        </li>
        {% else %}
        <li class="nav-item">
          <a class="nav-link" href="{{ path('login') }}">ログイン</a>
        </li>
        {% endif %}

        {% if userData == null %}
        {% else %}
        {# <li class="nav-item">
          <a class="nav-link" href="{{ path("my_info", {"id": userData.id }) }}">ユーザー情報</a>
        </li> #}
